<h1>Update Pet</h1>
<form action="/pets/<%= @pet.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
   <p>
    <label>Name: </label>
    <input type="text" name="pet[name]" id="pet_name" value="<%= @pet.name %>">
  </p>
  <p>
    Owner:<br />
    <% @owners.each do |owner| %>
      <input type="radio" name="pet[owner_id]" value="<%= owner.id %>" id="<%= owner.id %>" <%= 'checked' if @pet.owner_id == owner.id %>><%= owner.name %></p></input>
    <% end %>
    <label>Or add an owner</label>
    <input type="text" name="owner[name]" id="owner_name">

  <p><input type="submit" value="Update Pet"></p>
</form>